@model List<EfPractice.Models.SaleInvoice>

@{
    ViewData["Title"] = "Sale Invoices";
    decimal grand = 0;
}

<h2>Sale Invoices</h2>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-2">
            <div class="col-md-2">
                <input name="invoiceNo" value="@Context.Request.Query["invoiceNo"]" class="form-control" placeholder="Invoice # / Ref" />
            </div>
            <div class="col-md-2">
                <input name="buyer" value="@Context.Request.Query["buyer"]" class="form-control" placeholder="Buyer" />
            </div>
            <div class="col-md-2">
                <input type="date" name="from" value="@Context.Request.Query["from"]" class="form-control" />
            </div>
            <div class="col-md-2">
                <input type="date" name="to" value="@Context.Request.Query["to"]" class="form-control" />
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-primary">Server Filter</button>
            </div>
            <div class="col-md-2 d-grid">
                <a asp-action="SInv" class="btn btn-success">New Invoice</a>
            </div>
        </form>
        <small class="text-muted">Tip: Use the global search box below (client-side) or the form above (server-side).</small>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No invoices found.</div>
}
else
{
    <div class="table-responsive">
        <table id="invoiceTable" class="table table-sm table-bordered align-middle table-striped">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Invoice #</th>
                    <th>Ref #</th>
                    <th>Date</th>
                    <th>Buyer</th>
                    <th>Items</th>
                    <th>Total (Items Sum)</th>
                    <th>Status</th>
                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inv in Model)
                {
                    var total = (inv.Items?.Sum(i => i.TotalValues) ?? 0);
                    grand += total;
                    <tr>
                        <td>@inv.Id</td>
                        <td>@(inv.invoiceNumber ?? "-")</td>
                        <td>@(inv.InvoiceRefNo ?? "-")</td>
                        <td>@inv.InvoiceDate.ToString("yyyy-MM-dd")</td>
                        <td>@inv.BuyerBusinessName</td>
                        <td>@(inv.Items?.Count ?? 0)</td>
                        <td class="text-end">@total.ToString("N2")</td>
                        <td>@(string.IsNullOrEmpty(inv.invoiceNumber) ? "Draft" : "Sent")</td>
                        <td class="text-nowrap">
                            <a asp-action="SInv" asp-route-id="@inv.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="PrintInvoice" asp-route-id="@inv.Id" target="_blank" class="btn btn-sm btn-secondary">Print</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-secondary">
                    <th colspan="6" class="text-end">Grand Total:</th>
                    <th class="text-end">@grand.ToString("N2")</th>
                    <th colspan="2"></th>
                </tr>
            </tfoot>
        </table>
    </div>
}

<a asp-action="Main" class="btn btn-link">Back</a>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(function(){
            const table = $('#invoiceTable').DataTable({
                order: [[3,'desc']],
                pageLength: 25,
                lengthMenu: [[10,25,50,100,-1],[10,25,50,100,'All']],
                columnDefs: [
                    { targets: [0,5], searchable: false },
                    { targets: 8, orderable:false, searchable:false }
                ]
            });
        });
    </script>
}