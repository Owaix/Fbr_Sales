@model CategoryViewModel
<h2>Categories</h2>
<form asp-action="Categories" method="post">
	<input type="hidden" asp-for="Category.Cid" />
	<div class="row g-3">
		<div class="col-md-4">
			<label asp-for="Category.Name" class="form-label">Name</label> <input asp-for="Category.Name" class="form-control" />
			<span asp-validation-for="Category.Name" class="text-danger"></span>
		</div> <div class="col-md-4 d-flex align-items-end gap-2">
			<button class="btn btn-primary" type="submit">Save</button>
			<a asp-action="Categories" class="btn btn-secondary">Reset</a>
		</div>
	</div>
</form>
<hr />
<table class="table table-sm table-bordered">
	<thead><tr><th>ID</th><th>Name</th><th>Actions</th></tr></thead>
	<tbody>
		@foreach (var c in Model.Categories)
		{
			<tr>
				<td>@c.Cid</td>
				<td>@c.Name</td>
				<td>
					<a asp-action="Categories" asp-route-id="@c.Cid" class="btn btn-sm btn-warning">Edit</a>
					<form asp-action="DeleteCategory" asp-route-id="@c.Cid" method="post" class="d-inline" onsubmit="return confirm('Delete category?');">
						<button class="btn btn-sm btn-danger">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
<partial name="_ValidationScriptsPartial" />