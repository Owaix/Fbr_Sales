@model EfPractice.Models.UserListEditViewModel
@{
	ViewData["Title"] = "Users";
}
<div class="container">
	<div class="card card-add mb-3">
		<div class="card-body">
			<div class="d-sm-flex align-items-center mb-4">
				<h4 class="card-title mb-sm-0">User Profile</h4>
			</div>
			<form asp-action="Users" asp-controller="Home" method="post" novalidate>
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<input type="hidden" asp-for="User.Id" />

				<div class="row g-3">
					<div class="col-md-4">
						<label asp-for="User.UserName" class="form-label"></label>
						<input asp-for="User.UserName" class="form-control" />
						<span asp-validation-for="User.UserName" class="text-danger"></span>
					</div>
					<div class="col-md-4">
						<label asp-for="User.Email" class="form-label"></label>
						<input asp-for="User.Email" class="form-control" />
						<span asp-validation-for="User.Email" class="text-danger"></span>
					</div>
					<div class="col-md-4">
						<label asp-for="User.RoleName" class="form-label">Role</label>
						<select asp-for="User.RoleName" class="form-select">
							<option value="User">User</option>
						</select>
					</div>
					<div class="col-md-4">
						<label asp-for="User.Password" class="form-label"></label>
						<input asp-for="User.Password" class="form-control" autocomplete="new-password" />
						<span asp-validation-for="User.Password" class="text-danger"></span>
					</div>
					<div class="col-md-4">
						<label asp-for="User.ConfirmPassword" class="form-label"></label>
						<input asp-for="User.ConfirmPassword" class="form-control" autocomplete="new-password" />
						<span asp-validation-for="User.ConfirmPassword" class="text-danger"></span>
					</div>
					<div class="col-md-4 d-flex align-items-end gap-2">
						<button class="btn btn-primary w-50" type="submit">Save</button>
						<button class="btn btn-secondary w-50" type="button" onclick="clearUserEdit()">Reset</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	<div class="card">
		<div class="card-body">
			<div class="d-sm-flex align-items-center mb-4">
				<h4 class="card-title mb-sm-0">Users List</h4>
			</div>
			<div class="">
				<table id="usersTable" class="table">
					<thead class="table-light">
						<tr>
							<th>UserName</th>
							<th>Email</th>
							<th>User Role</th>
							<th style="width:120px;">Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var u in Model.Users)
						{
							<tr>
								<td>@u.UserName</td>
								<td>@u.Email</td>
								<td>@Common.GetUserRoleById(u.UserRoleId)</td>
								<td>
									<a asp-action="Users" asp-route-id="@u.Id" class="btn btn-sm btn-warning">Edit</a>
									<a asp-action="DeleteUser" asp-route-id="@u.Id" class="btn btn-sm btn-danger">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
	<script>
		$(function(){ $('#usersTable').DataTable({ pageLength:25, order:[[0,'asc']] }); });
		window.editUser = function(id){ window.location = '?editId=' + id; }
		window.clearUserEdit = function(){ window.location = '?'; }
	</script>
	<partial name="_ValidationScriptsPartial" />
}
