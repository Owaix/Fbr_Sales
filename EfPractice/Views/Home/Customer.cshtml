@model EfPractice.Models.CustomerViewModel

@{
    ViewData["Title"] = "Customer Profile";
}
<meta charset="utf-8" />
<title>@ViewData["Title"] - My ASP.NET Application</title>

<style>
    .form-control {
        width: 100%;
    }

    .table-container {
        max-height: 250px;
        overflow-y: auto;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .btn {
        cursor: pointer;
    }

    thead {
        background-color: #007bff;
        color: white;
    }

    .card-add {
        margin-bottom: 20px;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4">Customer Profile</h2>

    <!-- Form -->
    <div class="card card-add">
        <div class="card-body">
            <form asp-action="Customer" asp-controller="Home" method="post">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Customer.CusName"></label>
                        <input type="hidden" asp-for="Customer.CID" />
                        <input asp-for="Customer.CusName" class="form-control" />
                        <span asp-validation-for="Customer.CusName" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Customer.NTN_No"></label>
                        <input asp-for="Customer.NTN_No" class="form-control" />
                        <span asp-validation-for="Customer.NTN_No" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Customer.Add"></label>
                        <input asp-for="Customer.Add" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label>Province</label>
                        <select asp-for="Customer.City" class="form-select">
                            <option value="">Select Province</option>
                            <option value="1">Punjab</option>
                            <option value="2">Sindh</option>
                            <option value="3">KPK</option>
                            <option value="4">Balochistan</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label>Customer Status</label>
                        <select asp-for="Customer.InActive" class="form-select">
                            <option value="false">Active</option>
                            <option value="true">Inactive</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Customer.Cell"></label>
                        <input asp-for="Customer.Cell" class="form-control" />
                        <span asp-validation-for="Customer.Cell" class="text-danger"></span>

                    </div>

                    <div class="col-md-4">
                        <label asp-for="Customer.MrNO">Contract No:</label>
                        <input asp-for="Customer.MrNO" class="form-control" />
                        <span asp-validation-for="Customer.MrNO" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary w-50">Save</button>
                        <button type="reset" class="btn btn-secondary w-50">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="table-container">
        <table id="customerTable" class="table table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Customer Name</th>
                    <th>NTN/CNIC</th>
                    <th>Address</th>
                    <th>Province</th>
                    <th>Status</th>
                    <th>Cell</th>
                    <th>Contract No</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Customers)
                {
                    <tr>
                        <td>@c.CID</td>
                        <td>@c.CusName</td>
                        <td>@c.NTN_No</td>
                        <td>@c.Add</td>
                        <td>@c.Prn</td>
                        <td>@(c.InActive == true ? "Inactive" : "Active")</td>
                        <td>@c.Cell</td>
                        <td>@c.MrNO</td>
                        <td>
                            <a asp-action="Customer" asp-route-id="@c.CID" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="CustomerDelete" asp-route-id="@c.CID" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        var editingRow = null;
        var customerId = 1; // auto increment ID

        function clearForm() {
            $("#CustomerName, #NTN, #Address, #Province, #CustomerStatus, #Cell, #ContractNo").val('');
            $("#addButton").text("Add").removeClass("btn-warning").addClass("btn-primary");
            editingRow = null;
        }

        $("#addButton").click(function () {
            var customerData = {
                id: editingRow ? $(editingRow).find("td:eq(0)").text() : customerId,
                name: $("#CustomerName").val(),
                ntn: $("#NTN").val(),
                address: $("#Address").val(),
                province: $("#Province").val(),
                status: $("#CustomerStatus").val(),
                cell: $("#Cell").val(),
                contract: $("#ContractNo").val()
            };

            if (!customerData.name || !customerData.ntn || !customerData.address ||
                !customerData.province || !customerData.status || !customerData.cell || !customerData.contract) {
                Swal.fire("Error!", "Please fill all fields.", "error");
                return;
            }

            if (editingRow) {
                // update existing row
                $(editingRow).find("td:eq(1)").text(customerData.name);
                $(editingRow).find("td:eq(2)").text(customerData.ntn);
                $(editingRow).find("td:eq(3)").text(customerData.address);
                $(editingRow).find("td:eq(4)").text(customerData.province);
                $(editingRow).find("td:eq(5)").text(customerData.status);
                $(editingRow).find("td:eq(6)").text(customerData.cell);
                $(editingRow).find("td:eq(7)").text(customerData.contract);

                Swal.fire("Updated!", "Customer updated successfully.", "success");
                clearForm();
            } else {
                // add new row
                var row = `<tr>
                            <td>${customerData.id}</td>
                            <td>${customerData.name}</td>
                            <td>${customerData.ntn}</td>
                            <td>${customerData.address}</td>
                            <td>${customerData.province}</td>
                            <td>${customerData.status}</td>
                            <td>${customerData.cell}</td>
                            <td>${customerData.contract}</td>
                            <td>
                                <button type="button" class="btn btn-info editRow">Edit</button>
                                <button type="button" class="btn btn-danger deleteRow">Delete</button>
                            </td>
                        </tr>`;
                $("#customerTable tbody").append(row);
                customerId++;
                Swal.fire("Added!", "Customer added successfully.", "success");
                clearForm();
            }
        });

        // reset button
        $("#resetButton").click(function () {
            clearForm();
            Swal.fire("Reset!", "Form cleared successfully.", "info");
        });

        // edit row
        $("#customerTable").on("click", ".editRow", function () {
            editingRow = $(this).closest("tr");

            $("#CustomerName").val($(editingRow).find("td:eq(1)").text());
            $("#NTN").val($(editingRow).find("td:eq(2)").text());
            $("#Address").val($(editingRow).find("td:eq(3)").text());
            $("#Province").val($(editingRow).find("td:eq(4)").text());
            $("#CustomerStatus").val($(editingRow).find("td:eq(5)").text());
            $("#Cell").val($(editingRow).find("td:eq(6)").text());
            $("#ContractNo").val($(editingRow).find("td:eq(7)").text());

            $("#addButton").text("Update").removeClass("btn-primary").addClass("btn-warning");
        });

        // delete row
        $("#customerTable").on("click", ".deleteRow", function () {
            var row = $(this).closest("tr");
            Swal.fire({
                title: "Are you sure?",
                text: "This customer will be deleted!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    row.remove();
                    Swal.fire("Deleted!", "Customer removed successfully.", "success");
                    clearForm();
                }
            });
        });
    </script>
}
