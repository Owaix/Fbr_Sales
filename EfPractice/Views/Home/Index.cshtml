<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>POS Excel-like Table</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f9f9f9;
            margin: 20px;
        }

        .container {
            max-width: 1100px;
            margin: auto;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px #ccc;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .toolbar {
            margin-bottom: 15px;
        }

        .btn {
            padding: 8px 15px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            color: #fff;
        }

        .btn-success {
            background-color: #28a745;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .table-container {
            max-height: 350px;
            overflow-y: auto;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

            table th,
            table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: center;
            }

        thead {
            background: #007bff;
            color: white;
        }

        tr:hover {
            background: #f1f1f1;
        }

        .selected-row {
            background-color: #ffeeba !important;
        }

        .active-cell {
            outline: 2px solid #007bff;
        }

        .totals-container {
            display: flex;
            justify-content: space-between;
            gap: 15px;
        }

        .card {
            flex: 1;
            background: #f1f1f1;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
        }

        .form-control {
            width: 80px;
            padding: 5px;
            text-align: center;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>POS Software (Excel-like Table)</h2>

        <div class="toolbar">
            <button id="addRow" class="btn btn-success">Add Row (Ctrl+N)</button>
            <button id="deleteRow" class="btn btn-danger">Delete Row (Del)</button>
            <button id="saveButton" class="btn btn-primary">Save (Ctrl+S)</button>
        </div>

        <div class="table-container">
            <table id="myTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Category</th>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Discount</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Rows will be added dynamically -->
                </tbody>
            </table>
        </div>

        <div class="totals-container">
            <div class="card">
                <h4>Total Quantity</h4>
                <p id="totalQuantity">0</p>
            </div>
            <div class="card">
                <h4>Net Amount</h4>
                <p id="netAmount">0.00</p>
            </div>
            <div class="card">
                <h4>Sales Tax (%)</h4>
                <input type="number" id="taxRate" value="10" class="form-control" />
                <p id="salesTax">0.00</p>
            </div>
            <div class="card">
                <h4>Grand Total</h4>
                <p id="grandTotal">0.00</p>
            </div>
        </div>
    </div>


</body>
</html>




@section Scripts {
    <script src="~/js/pos.js"></script>


}

